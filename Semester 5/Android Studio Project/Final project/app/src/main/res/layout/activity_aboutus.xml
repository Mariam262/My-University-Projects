<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutus">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EA6A95"
        android:padding="20dp"
        android:text="About us"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icecream Parlour entered Pakistan in 1997 and since then, it’s been a journey full of excitement and Finger Lickin’ goodness! The first Icecream parlour opened in Pakistan opened in Gulshan Iqbal, Karachi and now our Finger Lickin’ Icecream is available in 32+ cities with over 110 parlour! Being the most loved icecream chain in Pakistan, Icecream leaves no stone unturned to provide its customers the most delicious icecream and an excellent dining experience."
        android:textStyle="bold"
        android:justificationMode="inter_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#91C7F3"
        android:padding="20dp"
        android:text="Life is like an ice cream: Enjoy it before it melts"
        android:textAlignment="center"
        android:textColor="#FEFDFF"
        android:textStyle="italic"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="156dp"
        android:src="@drawable/ice11"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="History"
        android:textColor="@color/white"
        android:background="#F474A0"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It all started with Colonel Harland Sanders, the man who convinced the world by saying “We do Icecream right!” Sanders took a great deal of time perfecting his iconic secret recipe of 11 herbs and milk, a legacy he’s brought to the world through Icecream parlour 10,000 parlours. Starting from outside of his gas station in Korbin, Kentucky to being a globally recognized face, we owe our success to the Colonel’s hard work and passion for sharing his love for icecream with the world!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:textStyle="bold"
        android:justificationMode="inter_word"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="0dp">


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>